admin_listen = 127.0.0.1:8001, 127.0.0.1:8445 ssl
ssl_cert = tls.crt
ssl_cert_key = tls.key
admin_ssl_cert = tls.crt
admin_ssl_cert_key = tls.key
database = {{ (getenv "KONG_DATABASE") }}
